{
  "name": "server",
  "version": "3.3.0",
  "private": true,
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "debug": "node --inspect-brk --enable-source-maps --import @swc-node/register/esm-register src/index.ts",
    "dev": "cross-env NODE_ENV=development nodemon --ext ts,js --exec \"node --enable-source-maps --import @swc-node/register/esm-register\" src/index.ts --ignore ../client",
    "build": "swc ./src -d dist",
    "serve": "cross-env NODE_ENV=production node --enable-source-maps dist/index.js",
    "start": "npm run typecheck && npm run build && npm run serve",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@shopify/shopify-app-express": "^6.0.3",
    "@shopify/shopify-app-session-storage-sqlite": "^5.0.3",
    "compression": "^1.8.1",
    "cross-env": "^10.1.0",
    "serve-static": "^2.2.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "pretty-quick": "^4.2.2",
    "typescript": "^5.8.3"
  }
}
